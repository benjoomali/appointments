<p id="notice"><%= notice %></p>

<h1>Form Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Form</th>
      <th>Appt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_entries.each do |form_entry| %>
      <tr>
        <td><%= form_entry.name %></td>
        <td><%= form_entry.email %></td>
        <td><%= form_entry.phone %></td>
        <td><%= form_entry.form_id %></td>
        <td><%= form_entry.appointments.first.start_time.strftime("%I:%M%p") if form_entry.appointments.present? %></td>
        <td><%= link_to 'Show', form_entry %></td>
        <td><%= link_to 'Edit', edit_form_entry_path(form_entry) %></td>
        <td><%= link_to 'Destroy', form_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

